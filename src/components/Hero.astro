---
interface Props {
  title: string;
  subtitle?: string;
  image: string;
  cta1Text?: string;
  cta1Link?: string;
  cta2Text?: string;
  cta2Link?: string;
  height?: string;
}

const { 
  title, 
  subtitle, 
  image, 
  cta1Text, 
  cta1Link, 
  cta2Text, 
  cta2Link,
  height = '100vh'
} = Astro.props;
---

<section class="hero" style={`--hero-height: ${height}`}>
  <div class="hero-background">
    <img src={image} alt="Hero background">
    <div class="hero-overlay"></div>
  </div>
  
  <div class="hero-content">
    <div class="container">
      <h1 class="hero-title">{title}</h1>
      {subtitle && <p class="hero-subtitle">{subtitle}</p>}
      
      {(cta1Text || cta2Text) && (
        <div class="hero-buttons">
          {cta1Text && cta1Link && (
            <a href={cta1Link} class="btn btn-primary">{cta1Text}</a>
          )}
          {cta2Text && cta2Link && (
            <a href={cta2Link} class="btn btn-secondary">{cta2Text}</a>
          )}
        </div>
      )}
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    height: var(--hero-height);
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    /* REMOVED: margin-top: 70px; */
    /* Hero now starts at the very top, behind the transparent header */
  }
  
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  
  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(26, 26, 46, 0.85) 0%, rgba(118, 75, 162, 0.6) 100%);
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    color: white;
    padding: 2rem;
    /* Add padding-top to push content down from header */
    padding-top: 8rem;
  }
  
  .hero-title {
    color: white;
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 800;
    margin-bottom: 1.5rem;
    text-shadow: 2px 4px 8px rgba(0, 0, 0, 0.3);
    animation: fadeInUp 0.8s ease-out;
  }
  
  .hero-subtitle {
    color: rgba(255, 255, 255, 0.95);
    font-size: clamp(1.2rem, 2vw, 1.5rem);
    max-width: 700px;
    margin: 0 auto 2.5rem;
    text-shadow: 1px 2px 4px rgba(0, 0, 0, 0.3);
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }
  
  .hero-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 0.8s ease-out 0.4s backwards;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (max-width: 768px) {
    .hero {
      height: 80vh;
      /* REMOVED: margin-top: 60px; */
    }
    
    .hero-content {
      padding-top: 6rem;
    }
    
    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .hero-buttons .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
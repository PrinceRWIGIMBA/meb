---
interface Props {
  title: string;
  description: string;
  icon: string;
  services?: string[];
}

const { title, description, icon, services } = Astro.props;
---

<div class="service-card">
  <div class="service-icon">{icon}</div>
  <h3>{title}</h3>
  <p>{description}</p>
  {services && (
    <ul class="service-list">
      {services.map(service => (
        <li>✓ {service}</li>
      ))}
    </ul>
  )}
</div>

<style>
  .service-card {
    background: white;
    border-radius: 20px;
    padding: 2.5rem;
    box-shadow: 0 5px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }
  
  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
    border-color: var(--accent);
  }
  
  .service-icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
  }
  
  .service-card h3 {
    color: var(--primary);
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }
  
  .service-card p {
    color: var(--text-light);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }
  
  .service-list {
    list-style: none;
    padding: 0;
  }
  
  .service-list li {
    color: var(--text-light);
    padding: 0.5rem 0;
    font-size: 0.95rem;
  }
  
  .service-list li::before {
    content: '✓ ';
    color: var(--accent);
    font-weight: bold;
    margin-right: 0.5rem;
  }
</style>
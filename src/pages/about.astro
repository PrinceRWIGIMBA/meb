---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import aboutData from '../data/about.json';

const { hero, story, mission, vision, differentiators, values } = aboutData;
---

<Layout title="About Us" description="Learn about MEB CBC Rwanda - a social enterprise dedicated to film production and youth empowerment">
  <Hero 
    title={hero.title}
    subtitle={hero.subtitle}
    image={hero.image}
    height="60vh"
  />
  
  <!-- Our Story -->
  <section class="our-story">
    <div class="container">
      <div class="story-grid">
        <div class="story-image">
          <img src={story.image} alt="MEB CBC Team">
        </div>
        <div class="story-content">
          <h2>{story.title}</h2>
          {story.content.split('\n\n').map((paragraph: string) => (
            <p set:html={paragraph.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')} />
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Mission & Vision -->
  <section class="mission-vision">
    <div class="container">
      <div class="grid grid-2">
        <div class="mission-card">
          <div class="icon">ðŸŽ¯</div>
          <h3>{mission.title}</h3>
          <p>{mission.content}</p>
        </div>
        
        <div class="mission-card">
          <div class="icon">ðŸŒŸ</div>
          <h3>{vision.title}</h3>
          <p>{vision.content}</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- What Makes Us Different -->
  <section class="differentiators">
    <div class="container">
      <div class="section-title">
        <h2>What Makes Us Different</h2>
      </div>
      
      <div class="diff-grid">
        {differentiators.map((item: any) => (
          <div class="diff-item">
            <div class="diff-icon">{item.icon}</div>
            <h4>{item.title}</h4>
            <p>{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Values -->
  <section class="values">
    <div class="container">
      <div class="section-title">
        <h2>Our Core Values</h2>
      </div>
      
      <div class="values-grid">
        {values.map((value: any) => (
          <div class="value-card">
            <h4>{value.title}</h4>
            <p>{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="about-cta">
    <div class="container">
      <div class="cta-box">
        <h2>Want to Work With Us?</h2>
        <p>Let's create something amazing together while making a positive impact on Rwanda's creative community.</p>
        <div class="cta-buttons">
          <a href="/services" class="btn btn-primary">Our Services</a>
          <a href="/contact" class="btn btn-outline">Contact Us</a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .our-story {
    padding: 5rem 0;
  }
  
  .story-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .story-image img {
    width: 100%;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  }
  
  .story-content h2 {
    color: var(--primary);
    margin-bottom: 1.5rem;
  }
  
  .story-content p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }
  
  .mission-vision {
    background: #f8f9fa;
  }
  
  .mission-card {
    background: white;
    padding: 3rem;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    text-align: center;
  }
  
  .mission-card .icon {
    font-size: 4rem;
    margin-bottom: 1.5rem;
  }
  
  .mission-card h3 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .mission-card p {
    font-size: 1.1rem;
    line-height: 1.8;
  }
  
  .differentiators {
    background: white;
  }
  
  .diff-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .diff-item {
    text-align: center;
    padding: 2rem;
  }
  
  .diff-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .diff-item h4 {
    color: var(--primary);
    margin-bottom: 0.5rem;
  }
  
  .diff-item p {
    font-size: 1rem;
    line-height: 1.6;
  }
  
  .values {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }
  
  .values .section-title h2 {
    color: white;
  }
  
  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .value-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .value-card h4 {
    color: white;
    margin-bottom: 0.5rem;
    font-size: 1.3rem;
  }
  
  .value-card p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
  }
  
  .about-cta {
    background: var(--primary);
  }
  
  .cta-box {
    text-align: center;
    color: white;
  }
  
  .cta-box h2 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .cta-box p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    max-width: 600px;
    margin: 0 auto 2rem;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  @media (max-width: 968px) {
    .story-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-buttons .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
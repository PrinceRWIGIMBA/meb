---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import GalleryItem from '../components/GalleryItem.astro';
import animationData from '../data/animation.json';
import portfolioData from '../data/portfolio.json';

const { hero, intro, services, workshop, testimonials } = animationData;

// Filter animation-specific items or use all
const portfolioItems = portfolioData.items.filter(item => 
  item.category === 'animation' || item.category === 'documentary'
);
---


<Layout title="Animation & Workshops" description="Animation production and workshops for youth and women in Rwanda">
  <Hero 
    title={hero.title}
    subtitle={hero.subtitle}
    image={hero.image}
    height="60vh"
  />
  
  <!-- Animation Services -->
  <section class="animation-intro">
    <div class="container">
      <div class="intro-grid">
        <div class="intro-content">
          <h2>{intro.title}</h2>
          <p>{intro.description}</p>
          <p>{intro.description2}</p>
          
          <div class="stats-row">
            {intro.stats.map((stat: any) => (
              <div class="stat">
                <h3>{stat.number}</h3>
                <p>{stat.label}</p>
              </div>
            ))}
          </div>
        </div>
        
        <div class="intro-image">
          <img src={intro.image} alt="Animation Work">
        </div>
      </div>
    </div>
  </section>
  
  <!-- Services Offered -->
  <section class="animation-services">
    <div class="container">
      <div class="section-title">
        <h2>Our Animation Services</h2>
      </div>
      
      <div class="services-grid">
        {services.map((service: any) => (
          <div class="service-box">
            <div class="service-icon">{service.icon}</div>
            <h3>{service.title}</h3>
            <p>{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Portfolio Gallery -->
  <section class="portfolio">
    <div class="container">
      <div class="section-title">
        <h2>Our Animation Portfolio</h2>
        <p>Stories brought to life through animation</p>
      </div>
      
      <div class="grid grid-3">
        {portfolioItems.map((item) => (
          <GalleryItem 
            image={item.image}
            title={item.title}
            description={item.description}
            videoLink={item.videoLink}
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Workshop Programs -->
  <section class="workshops">
    <div class="container">
      <div class="section-title">
        <h2>{workshop.title}</h2>
        <p>{workshop.subtitle}</p>
      </div>
      
      <div class="workshop-content">
        <div class="workshop-description">
          <h3>Who Can Join?</h3>
          <p>{workshop.description}</p>
          <ul class="participant-list">
            {workshop.participants.map((participant: string) => (
              <li>{participant}</li>
            ))}
          </ul>
          
          <div class="workshop-features">
            <h3>What You'll Learn</h3>
            <div class="feature-grid">
              {workshop.features.map((feature: string) => (
                <div class="feature-item">
                  <span class="feature-icon">✏️</span>
                  <span>{feature}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <div class="workshop-image">
          <img src={workshop.image} alt="Animation Workshop">
          <div class="workshop-cta-box">
            <h4>Interested in Our Workshops?</h4>
            <p>Programs are offered free or at subsidized rates thanks to our social enterprise model.</p>
            <a href="/contact" class="btn btn-primary">Apply Now</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Success Stories -->
  <section class="success-stories">
    <div class="container">
      <div class="section-title">
        <h2>Graduate Success Stories</h2>
      </div>
      
      <div class="stories-grid">
        {testimonials.map((testimonial: any) => (
          <div class="story-card">
            <div class="story-quote">"{testimonial.quote}"</div>
            <div class="story-author">— {testimonial.author}</div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="animation-cta">
    <div class="container">
      <div class="cta-box">
        <h2>Need Animation Services or Want to Learn?</h2>
        <p>Whether you need professional animation production or want to join our training programs, we're here to help.</p>
        <div class="cta-buttons">
          <a href="/contact" class="btn btn-primary">Get Started</a>
          <a href="/training" class="btn btn-secondary">Learn More About Training</a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .animation-intro {
    padding: 5rem 0;
    background: #f8f9fa;
  }
  
  .intro-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .intro-content h2 {
    color: var(--primary);
    margin-bottom: 1.5rem;
  }
  
  .intro-content p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }
  
  .stats-row {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .stat {
    text-align: center;
  }
  
  .stat h3 {
    color: var(--accent);
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  
  .stat p {
    color: var(--text-light);
    font-size: 0.9rem;
    margin: 0;
  }
  
  .intro-image img {
    width: 100%;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  }
  
  .animation-services {
    background: white;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  .service-box {
    background: #f8f9fa;
    padding: 2.5rem;
    border-radius: 20px;
    text-align: center;
    transition: all 0.3s ease;
  }
  
  .service-box:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
  }
  
  .service-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .service-box h3 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .service-box p {
    line-height: 1.7;
  }
  
  .portfolio {
    background: #f8f9fa;
  }
  
  .workshops {
    background: white;
  }
  
  .workshop-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
    margin-top: 3rem;
  }
  
  .workshop-description h3 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .participant-list {
    list-style: none;
    margin: 1rem 0 2rem;
  }
  
  .participant-list li {
    padding: 0.7rem 0;
    padding-left: 2rem;
    position: relative;
    color: var(--text-light);
  }
  
  .participant-list li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }
  
  .feature-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    padding: 0.5rem;
  }
  
  .feature-icon {
    font-size: 1.5rem;
  }
  
  .workshop-image {
    position: relative;
  }
  
  .workshop-image img {
    width: 100%;
    border-radius: 20px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
  }
  
  .workshop-cta-box {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    margin-top: -50px;
    position: relative;
    z-index: 10;
  }
  
  .workshop-cta-box h4 {
    color: var(--primary);
    margin-bottom: 0.5rem;
  }
  
  .workshop-cta-box p {
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }
  
  .success-stories {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }
  
  .success-stories .section-title h2 {
    color: white;
  }
  
  .stories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .story-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .story-quote {
    color: white;
    font-size: 1.1rem;
    line-height: 1.7;
    font-style: italic;
    margin-bottom: 1rem;
  }
  
  .story-author {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.95rem;
    text-align: right;
  }
  
  .animation-cta {
    background: var(--primary);
    text-align: center;
  }
  
  .cta-box {
    color: white;
  }
  
  .cta-box h2 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .cta-box p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto 2rem;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  @media (max-width: 968px) {
    .intro-grid,
    .workshop-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .stats-row {
      flex-direction: column;
      gap: 1rem;
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-buttons .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
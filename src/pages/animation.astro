---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import GalleryItem from '../components/GalleryItem.astro';
---

<Layout title="Animation & Workshops" description="Animation production and workshops for youth and women in Rwanda">
  <Hero 
    title="Animation & Workshops"
    subtitle="Creating stories through animation and empowering creative talent"
    image="/images/animation-still-1.jpg"
    height="60vh"
  />
  
  <!-- Animation Services -->
  <section class="animation-intro">
    <div class="container">
      <div class="intro-grid">
        <div class="intro-content">
          <h2>Animation Production & Training</h2>
          <p>We offer professional animation production services while simultaneously running comprehensive animation workshops focused on youth and women. Income from our commercial animation projects directly supports free and subsidized training programs.</p>
          
          <p>Our animation work combines storytelling with social impact, creating content that entertains, educates, and empowers both the audience and the creators behind it.</p>
          
          <div class="stats-row">
            <div class="stat">
              <h3>50+</h3>
              <p>Animation Trainees</p>
            </div>
            <div class="stat">
              <h3>20+</h3>
              <p>Completed Projects</p>
            </div>
            <div class="stat">
              <h3>15+</h3>
              <p>Workshop Sessions</p>
            </div>
          </div>
        </div>
        
        <div class="intro-image">
          <img src="/images/animation-still-2.jpg" alt="Animation Work">
        </div>
      </div>
    </div>
  </section>
  
  <!-- Services Offered -->
  <section class="animation-services">
    <div class="container">
      <div class="section-title">
        <h2>Our Animation Services</h2>
      </div>
      
      <div class="services-grid">
        <div class="service-box">
          <div class="service-icon">üé®</div>
          <h3>2D Animation</h3>
          <p>Character animation, explainer videos, and educational content using industry-standard software and techniques.</p>
        </div>
        
        <div class="service-box">
          <div class="service-icon">üé¨</div>
          <h3>Animated Shorts</h3>
          <p>Story-driven animated films that capture local narratives, culture, and important social messages.</p>
        </div>
        
        <div class="service-box">
          <div class="service-icon">üìö</div>
          <h3>Educational Animation</h3>
          <p>Engaging animated content for NGOs, educational institutions, and public awareness campaigns.</p>
        </div>
        
        <div class="service-box">
          <div class="service-icon">üéì</div>
          <h3>Animation Workshops</h3>
          <p>Hands-on training programs teaching animation fundamentals, storytelling, and production workflows.</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Portfolio Gallery -->
  <section class="portfolio">
    <div class="container">
      <div class="section-title">
        <h2>Our Animation Portfolio</h2>
        <p>Stories brought to life through animation</p>
      </div>
      
      <div class="grid grid-3">
        <GalleryItem 
          image="/images/isano.jpg"
          title="Isano"
          description="A culturally-rich animated film created through our training program, showcasing traditional Rwandan stories and values."
          videoLink="#"
        />
        
        <GalleryItem 
          image="/images/animation-still-1.jpg"
          title="Nyiragitwa"
          description="Community-focused animation developed with youth participants, addressing local social themes."
          videoLink="#"
        />
        
        <GalleryItem 
          image="/images/animation-still-2.jpg"
          title="Bwiza Animation"
          description="Cultural storytelling project produced by our training graduates, highlighting Rwandan heritage."
          videoLink="#"
        />
        
        <GalleryItem 
          image="/images/training.jpg"
          title="Educational Series"
          description="Animated educational content for health awareness and community development programs."
          videoLink="#"
        />
        
        <GalleryItem 
          image="/images/crew.jpg"
          title="Behind the Scenes"
          description="Documentary showing our animation production process and training methods."
          videoLink="#"
        />
        
        <GalleryItem 
          image="/images/lake-women-1.jpg"
          title="Women's Stories"
          description="Animated narratives highlighting the experiences and achievements of Rwandan women."
          videoLink="#"
        />
      </div>
    </div>
  </section>
  
  <!-- Workshop Programs -->
  <section class="workshops">
    <div class="container">
      <div class="section-title">
        <h2>Animation Workshop Programs</h2>
        <p>Building skills and creating opportunities</p>
      </div>
      
      <div class="workshop-content">
        <div class="workshop-description">
          <h3>Who Can Join?</h3>
          <p>Our animation workshops are designed for:</p>
          <ul class="participant-list">
            <li>Youth aged 18-30 interested in animation careers</li>
            <li>Women seeking creative industry skills</li>
            <li>Film and media students</li>
            <li>Creative professionals expanding their skills</li>
            <li>Community storytellers and artists</li>
          </ul>
          
          <div class="workshop-features">
            <h3>What You'll Learn</h3>
            <div class="feature-grid">
              <div class="feature-item">
                <span class="feature-icon">‚úèÔ∏è</span>
                <span>Character Design & Development</span>
              </div>
              <div class="feature-item">
                <span class="feature-icon">üìñ</span>
                <span>Storyboarding & Visual Storytelling</span>
              </div>
              <div class="feature-item">
                <span class="feature-icon">üé¨</span>
                <span>Animation Production Workflow</span>
              </div>
              <div class="feature-item">
                <span class="feature-icon">üíª</span>
                <span>Industry Software (Toon Boom, Adobe)</span>
              </div>
              <div class="feature-item">
                <span class="feature-icon">üé®</span>
                <span>Color Theory & Visual Design</span>
              </div>
              <div class="feature-item">
                <span class="feature-icon">üîä</span>
                <span>Sound & Voice Integration</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="workshop-image">
          <img src="/images/training.jpg" alt="Animation Workshop">
          <div class="workshop-cta-box">
            <h4>Interested in Our Workshops?</h4>
            <p>Programs are offered free or at subsidized rates thanks to our social enterprise model.</p>
            <a href="/contact" class="btn btn-primary">Apply Now</a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Success Stories -->
  <section class="success-stories">
    <div class="container">
      <div class="section-title">
        <h2>Graduate Success Stories</h2>
      </div>
      
      <div class="stories-grid">
        <div class="story-card">
          <div class="story-quote">"The animation training opened doors I never knew existed. Now I'm working on projects for international clients."</div>
          <div class="story-author">‚Äî Marie, Animation Graduate 2023</div>
        </div>
        
        <div class="story-card">
          <div class="story-quote">"Learning animation here changed my life. I can now tell our stories in ways that reach wider audiences."</div>
          <div class="story-author">‚Äî Jean-Paul, Animator & Storyteller</div>
        </div>
        
        <div class="story-card">
          <div class="story-quote">"As a woman in tech and creative arts, this program gave me both skills and confidence to pursue my passion professionally."</div>
          <div class="story-author">‚Äî Grace, Animation Studio Founder</div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="animation-cta">
    <div class="container">
      <div class="cta-box">
        <h2>Need Animation Services or Want to Learn?</h2>
        <p>Whether you need professional animation production or want to join our training programs, we're here to help.</p>
        <div class="cta-buttons">
          <a href="/contact" class="btn btn-primary">Get Started</a>
          <a href="/training" class="btn btn-secondary">Learn More About Training</a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .animation-intro {
    padding: 5rem 0;
    background: #f8f9fa;
  }
  
  .intro-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .intro-content h2 {
    color: var(--primary);
    margin-bottom: 1.5rem;
  }
  
  .intro-content p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }
  
  .stats-row {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
  }
  
  .stat {
    text-align: center;
  }
  
  .stat h3 {
    color: var(--accent);
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  
  .stat p {
    color: var(--text-light);
    font-size: 0.9rem;
    margin: 0;
  }
  
  .intro-image img {
    width: 100%;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  }
  
  .animation-services {
    background: white;
  }
  
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  .service-box {
    background: #f8f9fa;
    padding: 2.5rem;
    border-radius: 20px;
    text-align: center;
    transition: all 0.3s ease;
  }
  
  .service-box:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
  }
  
  .service-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .service-box h3 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .service-box p {
    line-height: 1.7;
  }
  
  .portfolio {
    background: #f8f9fa;
  }
  
  .workshops {
    background: white;
  }
  
  .workshop-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
    margin-top: 3rem;
  }
  
  .workshop-description h3 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .participant-list {
    list-style: none;
    margin: 1rem 0 2rem;
  }
  
  .participant-list li {
    padding: 0.7rem 0;
    padding-left: 2rem;
    position: relative;
    color: var(--text-light);
  }
  
  .participant-list li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }
  
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-top: 1rem;
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    gap: 0.7rem;
    padding: 0.5rem;
  }
  
  .feature-icon {
    font-size: 1.5rem;
  }
  
  .workshop-image {
    position: relative;
  }
  
  .workshop-image img {
    width: 100%;
    border-radius: 20px;
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
  }
  
  .workshop-cta-box {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    margin-top: -50px;
    position: relative;
    z-index: 10;
  }
  
  .workshop-cta-box h4 {
    color: var(--primary);
    margin-bottom: 0.5rem;
  }
  
  .workshop-cta-box p {
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }
  
  .success-stories {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }
  
  .success-stories .section-title h2 {
    color: white;
  }
  
  .stories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .story-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .story-quote {
    color: white;
    font-size: 1.1rem;
    line-height: 1.7;
    font-style: italic;
    margin-bottom: 1rem;
  }
  
  .story-author {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.95rem;
    text-align: right;
  }
  
  .animation-cta {
    background: var(--primary);
    text-align: center;
  }
  
  .cta-box {
    color: white;
  }
  
  .cta-box h2 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .cta-box p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto 2rem;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  @media (max-width: 968px) {
    .intro-grid,
    .workshop-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .stats-row {
      flex-direction: column;
      gap: 1rem;
    }
    
    .feature-grid {
      grid-template-columns: 1fr;
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-buttons .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
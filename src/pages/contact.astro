---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ContactForm from '../components/ContactForm.astro';
import contactData from '../data/contact.json';

const { hero, info, faq } = contactData;
---

<Layout title="Contact Us" description="Get in touch with MEB CBC Rwanda">
  <Hero 
    title={hero.title}
    subtitle={hero.subtitle}
    image={hero.image}
    height="50vh"
  />
  
  <!-- Contact Section -->
  <section class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <!-- Contact Information -->
        <div class="contact-info">
          <h2>Contact Information</h2>
          <p>{info.description}</p>
          
          <div class="info-items">
            <div class="info-item">
              <div class="info-icon">üìç</div>
              <div class="info-content">
                <h4>Location</h4>
                <p>{info.location}</p>
              </div>
            </div>
            
            <div class="info-item">
              <div class="info-icon">üìû</div>
              <div class="info-content">
                <h4>Phone</h4>
                <p>{info.phone}</p>
              </div>
            </div>
            
            <div class="info-item">
              <div class="info-icon">‚úâÔ∏è</div>
              <div class="info-content">
                <h4>Email</h4>
                <p>{info.email}</p>
              </div>
            </div>
            
            <div class="info-item">
              <div class="info-icon">üåê</div>
              <div class="info-content">
                <h4>Website</h4>
                <p>{info.website}</p>
              </div>
            </div>
          </div>
          
          <div class="business-hours">
            <h4>Business Hours</h4>
            <p><strong>{info.businessHours.weekday}</strong></p>
            <p><strong>{info.businessHours.saturday}</strong></p>
            <p><strong>{info.businessHours.sunday}</strong></p>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="form-container">
          <h3>Send Us a Message</h3>
          <p class="form-subtitle">Fill out the form below and we'll get back to you as soon as possible.</p>
          <ContactForm />
        </div>
      </div>
    </div>
  </section>
  
  <!-- What to Expect - keep this section from original -->
  
  <!-- FAQ -->
  <section class="faq">
    <div class="container">
      <div class="section-title">
        <h2>Frequently Asked Questions</h2>
      </div>
      
      <div class="faq-grid">
        {faq.map((item: any) => (
          <div class="faq-item">
            <h4>{item.question}</h4>
            <p>{item.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Keep remaining sections from original contact.astro -->
</Layout>

<style>
  .contact-section {
    padding: 5rem 0;
    background: #f8f9fa;
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 4rem;
  }
  
  .contact-info h2 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .contact-info > p {
    line-height: 1.8;
    margin-bottom: 2.5rem;
  }
  
  .info-items {
    margin-bottom: 3rem;
  }
  
  .info-item {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
    align-items: flex-start;
  }
  
  .info-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }
  
  .info-content h4 {
    color: var(--primary);
    margin-bottom: 0.3rem;
    font-size: 1.1rem;
  }
  
  .info-content p {
    color: var(--text-light);
    margin: 0;
    font-size: 1rem;
  }
  
  .business-hours {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    margin-bottom: 2rem;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
  }
  
  .business-hours h4 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .business-hours p {
    margin: 0.5rem 0;
    color: var(--text-light);
  }
  
  .social-links {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
  }
  
  .social-links h4 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .social-icons {
    display: flex;
    gap: 1rem;
  }
  
  .social-icon {
    width: 50px;
    height: 50px;
    background: #f8f9fa;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .social-icon:hover {
    background: var(--accent);
    transform: translateY(-5px);
  }
  
  .form-container h3 {
    color: var(--primary);
    margin-bottom: 0.5rem;
  }
  
  .form-subtitle {
    color: var(--text-light);
    margin-bottom: 2rem;
  }
  
  .what-to-expect {
    background: white;
  }
  
  .expect-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .expect-item {
    text-align: center;
    padding: 2rem;
    background: #f8f9fa;
    border-radius: 15px;
  }
  
  .expect-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .expect-item h4 {
    color: var(--primary);
    margin-bottom: 0.5rem;
  }
  
  .expect-item p {
    line-height: 1.6;
    margin: 0;
  }
  
  .services-overview {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }
  
  .services-overview .section-title h2 {
    color: white;
  }
  
  .help-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  .help-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2.5rem;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .help-card h4 {
    color: white;
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }
  
  .help-card p {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.7;
    margin-bottom: 1rem;
  }
  
  .link-arrow {
    color: white;
    text-decoration: none;
    font-weight: 600;
    display: inline-block;
    transition: all 0.3s ease;
  }
  
  .link-arrow:hover {
    transform: translateX(5px);
  }
  
  .faq {
    background: #f8f9fa;
  }
  
  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }
  
  .faq-item {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
  }
  
  .faq-item h4 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .faq-item p {
    line-height: 1.7;
    margin: 0;
  }
  
  .location-map {
    background: white;
  }
  
  .map-placeholder {
    background: #f8f9fa;
    border-radius: 20px;
    padding: 4rem;
    text-align: center;
    border: 2px dashed #ddd;
  }
  
  .map-content h3 {
    color: var(--primary);
    margin-bottom: 0.5rem;
  }
  
  .map-content p {
    color: var(--text-light);
    margin: 0.3rem 0;
  }
  
  .map-note {
    margin-top: 1.5rem !important;
    font-weight: 500;
  }
  
  .final-cta {
    background: var(--primary);
    color: white;
    text-align: center;
  }
  
  .cta-box h2 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .cta-box p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    margin-bottom: 2rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .cta-contact {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  @media (max-width: 968px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .cta-contact {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-contact .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
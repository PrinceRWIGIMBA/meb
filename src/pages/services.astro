---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import servicesData from '../data/services.json';

const { hero, production, service, equipment } = servicesData;
---

<Layout title="Production Services" description="Professional film production services in Rwanda">
  <Hero 
    title={hero.title}
    subtitle={hero.subtitle}
    image={hero.image}
    height="60vh"
  />
  
  <!-- Services Overview -->
  <section class="services-intro">
    <div class="container">
      <div class="intro-content">
        <h2>Comprehensive Film Solutions</h2>
        <p>MEB CBC provides end-to-end film production services for clients ranging from international broadcasters to local NGOs. Our experienced team ensures your project runs smoothly from concept to delivery.</p>
      </div>
    </div>
  </section>
  
  <!-- Film Production -->
  <section id="production" class="production-services">
    <div class="container">
      <div class="section-title">
        <h2>Film Production Services</h2>
        <p>Professional video production for all your needs</p>
      </div>
      
      <div class="grid grid-2">
        {production.map((service: any) => (
          <ServiceCard 
            title={service.title}
            icon={service.icon}
            description={service.description}
            services={service.services}
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Fixing Services -->
  <section id="service" class="fixing-services">
    <div class="container">
      <div class="section-title">
        <h2>Film Services</h2>
        <p>Complete production support for filming in Rwanda</p>
      </div>
      
      <div class="film-intro">
        <p>Planning to film in Rwanda? Our production services make international productions seamless. We handle all logistics, permits, and local coordination so you can focus on creating great content.</p>
      </div>
      
      <div class="grid grid-3">
        {service.map((service: any) => (
          <ServiceCard 
            title={service.title}
            icon={service.icon}
            description={service.description}
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Why Choose Us -->
  <section class="why-choose">
    <div class="container">
      <div class="section-title">
        <h2>Why Choose MEB CBC</h2>
      </div>
      
      <div class="grid grid-2">
        <div class="feature-box">
          <div class="feature-icon">‚≠ê</div>
          <h3>Professional Quality</h3>
          <p>International standards of production quality with experienced crews and modern equipment.</p>
        </div>
        
        <div class="feature-box">
          <div class="feature-icon">üí∞</div>
          <h3>Competitive Pricing</h3>
          <p>Cost-effective solutions without compromising on quality, with transparent pricing structures.</p>
        </div>
        
        <div class="feature-box">
          <div class="feature-icon">üåç</div>
          <h3>Local Expertise</h3>
          <p>Deep understanding of Rwanda's culture, regulations, and filming locations.</p>
        </div>
        
        <div class="feature-box">
          <div class="feature-icon">‚ù§Ô∏è</div>
          <h3>Social Impact</h3>
          <p>Your project directly contributes to training programs for Rwandan youth and women.</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Equipment List -->
  <section class="equipment">
    <div class="container">
      <div class="section-title">
        <h2>Available Equipment</h2>
        <p>Professional gear for any production</p>
      </div>
      
      <div class="equipment-grid">
        {equipment.map((category: any) => (
          <div class="equipment-category">
            <h4>{category.icon} {category.category}</h4>
            <ul>
              {category.items.map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="services-cta">
    <div class="container">
      <div class="cta-content">
        <h2>Ready to Start Your Project?</h2>
        <p>Get in touch to discuss your production needs and receive a customized quote.</p>
        <a href="/contact" class="btn btn-primary">Request a Quote</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .services-intro {
    padding: 3rem 0;
    background: #f8f9fa;
  }
  
  .intro-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  
  .intro-content h2 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .intro-content p {
    font-size: 1.2rem;
    line-height: 1.8;
  }
  
  .production-services {
    background: white;
  }
  
  .fixing-services {
    background: #f8f9fa;
  }
  
  .film-intro {
    max-width: 800px;
    margin: 0 auto 3rem;
    text-align: center;
  }
  
  .film-intro p {
    font-size: 1.15rem;
    line-height: 1.8;
  }
  
  .why-choose {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }
  
  .why-choose .section-title h2 {
    color: white;
  }
  
  .feature-box {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2.5rem;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    text-align: center;
  }
  
  .feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .feature-box h3 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .feature-box p {
    color: rgba(255, 255, 255, 0.95);
    font-size: 1.1rem;
    line-height: 1.7;
  }
  
  .equipment {
    background: white;
  }
  
  .equipment-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .equipment-category {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 15px;
  }
  
  .equipment-category h4 {
    color: var(--primary);
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }
  
  .equipment-category ul {
    list-style: none;
  }
  
  .equipment-category li {
    padding: 0.5rem 0;
    color: var(--text-light);
    position: relative;
    padding-left: 1.5rem;
  }
  
  .equipment-category li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }
  
  .services-cta {
    background: var(--primary);
    text-align: center;
    color: white;
  }
  
  .services-cta h2 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .services-cta p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }
</style>
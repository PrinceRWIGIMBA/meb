<style>
  .services-intro {
    padding: 3rem 0;
    background: #f8f9fa;
  }
  
  .intro-content {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  
  .intro-content h2 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .intro-content p {
    font-size: 1.2rem;
    line-height: 1.8;
  }
  
  .production-services {
    background: white;
  }
  
  .fixing-services {
    background: #f8f9fa;
  }
  
  .fixing-intro {
    max-width: 800px;
    margin: 0 auto 3rem;
    text-align: center;
  }
  
  .fixing-intro p {
    font-size: 1.15rem;
    line-height: 1.8;
  }
  
  .why-choose {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }
  
  .why-choose .section-title h2 {
    color: white;
  }
  
  .feature-box {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2.5rem;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    text-align: center;
  }
  
  .feature-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .feature-box h3 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .feature-box p {
    color: rgba(255, 255, 255, 0.95);
    font-size: 1.1rem;
    line-height: 1.7;
  }
  
  .equipment {
    background: white;
  }
  
  .equipment-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .equipment-category {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 15px;
  }
  
  .equipment-category h4 {
    color: var(--primary);
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }
  
  .equipment-category ul {
    list-style: none;
  }
  
  .equipment-category li {
    padding: 0.5rem 0;
    color: var(--text-light);
    position: relative;
    padding-left: 1.5rem;
  }
  
  .equipment-category li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }
  
  .services-cta {
    background: var(--primary);
    text-align: center;
    color: white;
  }
  
  .services-cta h2 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .services-cta p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }
</style>
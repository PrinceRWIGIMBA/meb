---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import impactData from '../data/impact.json';

const { hero, intro, numbers, focusAreas, stories } = impactData;
---

<Layout title="Our Impact" description="Measuring the social impact of MEB CBC's training programs">  
  <Hero 
    title={hero.title}
    subtitle={hero.subtitle}
    image={hero.image}
    height="60vh"
  />
  
  <!-- Impact Overview -->
  <section class="impact-intro">
    <div class="container">
      <div class="intro-content">
        <h2>{intro.title}</h2>
        <p set:html={intro.description.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')} />
      </div>
    </div>
  </section>
  
  <!-- Impact Numbers -->
  <section class="impact-numbers">
    <div class="container">
      <div class="section-title">
        <h2>Impact by the Numbers</h2>
      </div>
      
      <div class="numbers-grid">
        {numbers.map((item: any) => (
          <div class="number-card">
            <div class="number">{item.number}</div>
            <div class="label">{item.label}</div>
            <p>{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Focus Areas -->
  <section class="focus-areas">
    <div class="container">
      <div class="section-title">
        <h2>Our Focus Areas</h2>
      </div>
      
      <div class="focus-grid">
        {focusAreas.map((area: any) => (
          <div class="focus-card">
            <div class="focus-icon">{area.icon}</div>
            <h3>{area.title}</h3>
            <p>{area.description}</p>
            <ul class="focus-list">
              {area.points.map((point: string) => (
                <li>{point}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Beneficiary Stories -->
  <section class="beneficiary-stories">
    <div class="container">
      <div class="section-title">
        <h2>Stories of Change</h2>
        <p>Real people, real transformation</p>
      </div>
      
      <div class="stories-grid">
        {stories.map((story: any) => (
          <div class="story-card">
            <div class="story-image">
              <img src={story.image} alt={story.title}>
            </div>
            <div class="story-content">
              <h4>{story.title}</h4>
              <p class="story-quote">"{story.quote}"</p>
              <div class="story-author">— {story.author}</div>
              <div class="story-meta">{story.role}</div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Keep all remaining sections from your original impact.astro -->
  <!-- Social Enterprise Model, SDG Alignment, Partnership Impact sections -->
  
  <!-- CTA -->
  <section class="impact-cta">
    <div class="container">
      <div class="cta-content">
        <h2>Be Part of the Change</h2>
        <p>Whether through using our services, partnering with us, or supporting our programs, you can help create lasting opportunities for Rwandan youth and women.</p>
        
        <div class="cta-buttons">
          <a href="/contact" class="btn btn-primary">Get in Touch</a>
          <a href="/services" class="btn btn-secondary">Our Services</a>
        </div>
      </div>
    </div>
  </section>
</Layout>
---


<style>
  .impact-intro {
    padding: 3rem 0;
    background: #f8f9fa;
  }
  
  .intro-content {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
  }
  
  .intro-content h2 {
    color: var(--primary);
    margin-bottom: 1.5rem;
  }
  
  .intro-content p {
    font-size: 1.2rem;
    line-height: 1.9;
  }
  
  .impact-numbers {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }
  
  .impact-numbers .section-title h2 {
    color: white;
  }
  
  .numbers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  .number-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2.5rem 2rem;
    border-radius: 20px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    text-align: center;
    transition: all 0.3s ease;
  }
  
  .number-card:hover {
    transform: translateY(-10px);
    background: rgba(255, 255, 255, 0.15);
  }
  
  .number {
    font-size: 4rem;
    font-weight: 800;
    color: white;
    margin-bottom: 0.5rem;
    line-height: 1;
  }
  
  .label {
    font-size: 1.3rem;
    font-weight: 600;
    color: white;
    margin-bottom: 1rem;
  }
  
  .number-card p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
  }
  
  .focus-areas {
    background: white;
  }
  
  .focus-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .focus-card {
    background: #f8f9fa;
    padding: 2.5rem;
    border-radius: 20px;
    border-left: 4px solid var(--accent);
  }
  
  .focus-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .focus-card h3 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .focus-card p {
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }
  
  .focus-list {
    list-style: none;
  }
  
  .focus-list li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--text-light);
    font-size: 0.95rem;
  }
  
  .focus-list li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }
  
  .beneficiary-stories {
    background: #f8f9fa;
  }
  
  .stories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2.5rem;
  }
  
  .story-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }
  
  .story-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
  }
  
  .story-image {
    height: 250px;
    overflow: hidden;
  }
  
  .story-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .story-card:hover .story-image img {
    transform: scale(1.1);
  }
  
  .story-content {
    padding: 2rem;
  }
  
  .story-content h4 {
    color: var(--primary);
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }
  
  .story-quote {
    font-style: italic;
    line-height: 1.7;
    color: var(--text-light);
    margin-bottom: 1.5rem;
    border-left: 3px solid var(--accent);
    padding-left: 1rem;
  }
  
  .story-author {
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 0.3rem;
  }
  
  .story-meta {
    color: var(--text-light);
    font-size: 0.9rem;
  }
  
  .se-model {
    background: white;
  }
  
  .model-diagram {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 3rem 0;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .model-step {
    flex: 1;
    min-width: 200px;
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 15px;
    text-align: center;
  }
  
  .step-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .model-step h4 {
    color: var(--primary);
    margin-bottom: 0.5rem;
  }
  
  .model-step p {
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
  }
  
  .model-arrow {
    font-size: 2rem;
    color: var(--accent);
    font-weight: bold;
  }
  
  .model-benefits {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 3rem;
    border-radius: 20px;
    color: white;
    margin-top: 3rem;
  }
  
  .model-benefits h3 {
    color: white;
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.8rem;
  }
  
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .benefit {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 1.5rem;
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .benefit strong {
    color: white;
    display: block;
    margin-bottom: 0.5rem;
  }
  
  .sdg-alignment {
    background: #f8f9fa;
  }
  
  .sdg-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .sdg-card {
    background: white;
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    text-align: center;
  }
  
  .sdg-number {
    width: 80px;
    height: 80px;
    background: var(--accent);
    color: white;
    font-size: 2.5rem;
    font-weight: 800;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    margin: 0 auto 1.5rem;
  }
  
  .sdg-card h4 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .sdg-card p {
    line-height: 1.7;
  }
  
  .partnership-impact {
    background: white;
  }
  
  .partnership-intro {
    text-align: center;
    font-size: 1.2rem;
    max-width: 800px;
    margin: 0 auto 3rem;
    line-height: 1.8;
  }
  
  .partnership-ways {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .way {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 15px;
    text-align: center;
  }
  
  .way h4 {
    color: var(--primary);
    margin-bottom: 0.5rem;
    font-size: 1.2rem;
  }
  
  .way p {
    margin: 0;
    line-height: 1.6;
  }
  
  .impact-cta {
    background: var(--primary);
    color: white;
    text-align: center;
  }
  
  .impact-cta h2 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .impact-cta p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    max-width: 700px;
    margin: 0 auto 2rem;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  @media (max-width: 968px) {
    .model-diagram {
      flex-direction: column;
    }
    
    .model-arrow {
      transform: rotate(90deg);
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-buttons .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
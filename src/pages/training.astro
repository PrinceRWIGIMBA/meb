---
import Layout from '../layouts/Layout.astro';
import trainingData from '../data/training.json';

const { hero, intro, programs, timeline, curriculum, stats, testimonials, facilities, application } = trainingData;
---

<Layout title="RMP Film Trainings" description="Rwanda Media Project - Professional film training in partnership with Media Education Babelsberg">
  <!-- Custom RMP Hero Section -->
  <section class="rmp-hero" style={`background-image: url(${hero.image})`}>
    <div class="hero-overlay"></div>
    <div class="container">
      <div class="rmp-hero-content">
        <a href={hero.link} target="_blank" rel="noopener noreferrer" class="rmp-branding">
          <div class="rmp-logo-text">
            <span class="rmp-letters">{hero.rmpLetters}</span>
            <span class="rmp-divider">|</span>
            <div class="rmp-full-name">
              <div>{hero.rmpFullName1}</div>
              <div>{hero.rmpFullName2}</div>
            </div>
          </div>
          <div class="rmp-tagline">{hero.tagline}</div>
          <div class="hover-message">
            <span class="learn-more-text">LEARN MORE ‚Üí</span>
          </div>
        </a>
      </div>
    </div>
  </section>
  
  <!-- RMP Overview -->
  <section class="rmp-intro">
    <div class="container">
      <div class="intro-grid">
        <div class="intro-content">
          <h2>{intro.title}</h2>
          <p set:html={intro.description1.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')} />
          <p>{intro.description2}</p>
          
          <div class="partnership-logos">
            {intro.partners.map((partner: any, index: number) => (
              <>
                <div class="partner">
                  <h4>{partner.name}</h4>
                  <p>{partner.description}</p>
                </div>
                {index < intro.partners.length - 1 && <div class="partner-divider">ü§ù</div>}
              </>
            ))}
          </div>
        </div>
        
        <div class="intro-image">
          <img src={intro.image} alt="RMP Training Session">
        </div>
      </div>
    </div>
  </section>
  
  <!-- Training Programs -->
  <section class="training-programs">
    <div class="container">
      <div class="section-title">
        <h2>Training Programs</h2>
        <p>Comprehensive film education for all skill levels</p>
      </div>
      
      <div class="programs-grid">
        {programs.map((program: any) => (
          <div class={`program-card ${program.featured ? 'featured' : ''}`}>
            {program.featured && <div class="program-badge">Most Popular</div>}
            <div class="program-header">
              <h3>{program.title}</h3>
              <span class="duration">{program.duration}</span>
            </div>
            <p class="program-desc">{program.description}</p>
            <ul class="program-modules">
              {program.modules.map((module: string) => (
                <li>{module}</li>
              ))}
            </ul>
            <div class="program-footer">
              <span class="fee">{program.fee}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Training Timeline -->
  <section class="training-timeline">
    <div class="container">
      <div class="section-title">
        <h2>{timeline.title}</h2>
        <p>{timeline.subtitle}</p>
      </div>
      
      <div class="timeline">
        {timeline.steps.map((step: any) => (
          <div class="timeline-item">
            <div class="timeline-icon">{step.icon}</div>
            <div class="timeline-content">
              <h4>{step.title}</h4>
              <p>{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- What Students Learn -->
  <section class="curriculum">
    <div class="container">
      <div class="section-title">
        <h2>What You'll Learn</h2>
      </div>
      
      <div class="curriculum-grid">
        {curriculum.map((cat: any) => (
          <div class="curriculum-category">
            <div class="category-icon">{cat.icon}</div>
            <h4>{cat.category}</h4>
            <ul>
              {cat.items.map((item: string) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Student Success -->
  <section class="student-success">
    <div class="container">
      <div class="section-title">
        <h2>Student Success Stories</h2>
      </div>
      
      <div class="success-grid">
        {stats.map((stat: any) => (
          <div class="success-stat">
            <h3>{stat.number}</h3>
            <p>{stat.label}</p>
          </div>
        ))}
      </div>
      
      <div class="testimonials">
        {testimonials.map((testimonial: any) => (
          <div class="testimonial">
            <p class="quote">"{testimonial.quote}"</p>
            <div class="author">‚Äî {testimonial.author}</div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Facilities & Equipment -->
  <section class="facilities">
    <div class="container">
      <div class="section-title">
        <h2>{facilities.title}</h2>
      </div>
      
      <div class="facilities-content">
        <div class="facilities-text">
          <h3>{facilities.subtitle}</h3>
          <p>{facilities.description}</p>
          
          <ul class="facilities-list">
            {facilities.items.map((item: string) => (
              <li>{item}</li>
            ))}
          </ul>
          
          <p>{facilities.closingText}</p>
        </div>
        
        <div class="facilities-image">
          <img src={facilities.image} alt="Training Facilities">
        </div>
      </div>
    </div>
  </section>
  
  <!-- How to Apply -->
  <section class="apply-section">
    <div class="container">
      <div class="apply-box">
        <h2>{application.title}</h2>
        <p>{application.description}</p>
        
        <div class="apply-requirements">
          <h4>{application.requirementsTitle}</h4>
          <ul>
            {application.requirements.map((req: string) => (
              <li>{req}</li>
            ))}
          </ul>
        </div>
        
        <div class="apply-buttons">
          {application.buttons.map((button: any) => (
            <a href={button.link} class={`btn btn-${button.style}`}>{button.text}</a>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Custom RMP Hero Section */
  .rmp-hero {
    position: relative;
    height: 60vh;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.7) 0%, rgba(118, 75, 162, 0.7) 100%);
    z-index: 1;
  }
  
  .rmp-hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
  }
  
  .rmp-branding {
    display: inline-block;
    position: relative;
    cursor: pointer;
    text-decoration: none;
    padding: 2rem 3rem;
    background: transparent;
    border-radius: 10px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .rmp-branding:hover {
    transform: scale(1.05);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }
  
  .rmp-logo-text {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 1rem;
  }
  
  .rmp-letters {
    font-size: 5rem;
    font-weight: 900;
    color: #FFA500;
    letter-spacing: 0.5rem;
    line-height: 1;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }
  
  .rmp-divider {
    font-size: 4rem;
    color: #ffffff;
    font-weight: 300;
  }
  
  .rmp-full-name {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0;
  }
  
  .rmp-full-name div {
    font-size: 2.2rem;
    font-weight: 900;
    color: #ffffff;
    letter-spacing: 0.35rem;
    line-height: 1;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }
  
  .rmp-tagline {
    font-size: 1.3rem;
    font-weight: 600;
    color: #F5A623;
    letter-spacing: 0.25rem;
    text-align: center;
    margin-top: 0.5rem;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }
  
  .hover-message {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 165, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 10px;
  }
  
  .rmp-branding:hover .hover-message {
    opacity: 1;
  }
  
  .learn-more-text {
    color: white;
    font-size: 2.5rem;
    font-weight: 900;
    letter-spacing: 0.2rem;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  }
  
  /* Existing styles */
  .rmp-intro {
    padding: 5rem 0;
    background: #f8f9fa;
  }
  
  .intro-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .intro-content h2 {
    color: var(--primary);
    margin-bottom: 1.5rem;
  }
  
  .intro-content p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }
  
  .partnership-logos {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
    margin-top: 2.5rem;
    padding: 2rem;
    background: white;
    border-radius: 15px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
  }
  
  .partner {
    flex: 1;
    text-align: center;
  }
  
  .partner h4 {
    color: var(--primary);
    margin-bottom: 0.5rem;
  }
  
  .partner p {
    color: var(--text-light);
    font-size: 0.9rem;
    margin: 0;
  }
  
  .partner-divider {
    font-size: 2rem;
  }
  
  .intro-image img {
    width: 100%;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  }
  
  .training-programs {
    background: white;
  }
  
  .programs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }
  
  .program-card {
    background: #f8f9fa;
    border-radius: 20px;
    padding: 2.5rem;
    position: relative;
    border: 3px solid transparent;
    transition: all 0.3s ease;
  }
  
  .program-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
  }
  
  .program-card.featured {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-color: var(--accent);
  }
  
  .program-badge {
    position: absolute;
    top: -15px;
    right: 20px;
    background: var(--accent);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
  }
  
  .program-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .program-header h3 {
    color: var(--primary);
    margin: 0;
  }
  
  .program-card.featured .program-header h3 {
    color: white;
  }
  
  .duration {
    background: white;
    color: var(--primary);
    padding: 0.4rem 0.8rem;
    border-radius: 15px;
    font-size: 0.85rem;
    font-weight: 600;
  }
  
  .program-card.featured .duration {
    background: rgba(255, 255, 255, 0.2);
    color: white;
  }
  
  .program-desc {
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  
  .program-card.featured .program-desc {
    color: rgba(255, 255, 255, 0.95);
  }
  
  .program-modules {
    list-style: none;
    margin-bottom: 1.5rem;
  }
  
  .program-modules li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--text-light);
  }
  
  .program-card.featured .program-modules li {
    color: rgba(255, 255, 255, 0.9);
  }
  
  .program-modules li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }
  
  .program-card.featured .program-modules li::before {
    color: white;
  }
  
  .program-footer {
    border-top: 2px solid #e0e0e0;
    padding-top: 1rem;
    text-align: center;
  }
  
  .program-card.featured .program-footer {
    border-top-color: rgba(255, 255, 255, 0.2);
  }
  
  .fee {
    font-weight: 600;
    color: var(--accent);
  }
  
  .program-card.featured .fee {
    color: white;
  }
  
  .training-timeline {
    background: #f8f9fa;
  }
  
  .timeline {
    max-width: 900px;
    margin: 0 auto;
  }
  
  .timeline-item {
    display: flex;
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .timeline-icon {
    font-size: 3rem;
    flex-shrink: 0;
  }
  
  .timeline-content h4 {
    color: var(--primary);
    margin-bottom: 0.5rem;
  }
  
  .timeline-content p {
    line-height: 1.7;
  }
  
  .curriculum {
    background: white;
  }
  
  .curriculum-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }
  
  .curriculum-category {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 15px;
    text-align: center;
  }
  
  .category-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .curriculum-category h4 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .curriculum-category ul {
    list-style: none;
    text-align: left;
  }
  
  .curriculum-category li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--text-light);
  }
  
  .curriculum-category li::before {
    content: '‚Ä¢';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }
  
  .student-success {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }
  
  .student-success .section-title h2 {
    color: white;
  }
  
  .success-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }
  
  .success-stat {
    text-align: center;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .success-stat h3 {
    color: white;
    font-size: 3rem;
    margin-bottom: 0.5rem;
  }
  
  .success-stat p {
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }
  
  .testimonials {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .testimonial {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 15px;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }
  
  .quote {
    color: white;
    font-size: 1.05rem;
    line-height: 1.7;
    font-style: italic;
    margin-bottom: 1rem;
  }
  
  .author {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    text-align: right;
  }
  
  .facilities {
    background: white;
  }
  
  .facilities-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .facilities-text h3 {
    color: var(--primary);
    margin-bottom: 1rem;
  }
  
  .facilities-text p {
    line-height: 1.8;
    margin-bottom: 1.5rem;
  }
  
  .facilities-list {
    list-style: none;
    margin: 1.5rem 0;
  }
  
  .facilities-list li {
    padding: 0.7rem 0;
    font-size: 1.05rem;
    color: var(--text-light);
  }
  
  .facilities-image img {
    width: 100%;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  }
  
  .apply-section {
    background: var(--primary);
    color: white;
  }
  
  .apply-box {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }
  
  .apply-box h2 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .apply-box > p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }
  
  .apply-requirements {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 2rem;
    border-radius: 15px;
    margin-bottom: 2rem;
    text-align: left;
  }
  
  .apply-requirements h4 {
    color: white;
    margin-bottom: 1rem;
  }
  
  .apply-requirements ul {
    list-style: none;
  }
  
  .apply-requirements li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: rgba(255, 255, 255, 0.9);
  }
  
  .apply-requirements li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: white;
    font-weight: bold;
  }
  
  .apply-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  @media (max-width: 968px) {
    .intro-grid,
    .facilities-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .partnership-logos {
      flex-direction: column;
    }
    
    .apply-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .apply-buttons .btn {
      width: 100%;
      max-width: 300px;
    }
    
    .rmp-hero {
      min-height: 400px;
    }
    
    .rmp-branding {
      padding: 1.5rem 1.5rem;
    }
    
    .rmp-logo-text {
      gap: 1rem;
    }
    
    .rmp-letters {
      font-size: 3rem;
      letter-spacing: 0.3rem;
    }
    
    .rmp-divider {
      font-size: 3rem;
    }
    
    .rmp-full-name div {
      font-size: 1.5rem;
      letter-spacing: 0.2rem;
    }
    
    .rmp-tagline {
      font-size: 0.9rem;
      letter-spacing: 0.15rem;
    }
    
    .learn-more-text {
      font-size: 2rem;
    }
  }
  
  @media (max-width: 640px) {
    .rmp-branding {
      padding: 1rem;
    }
    
    .rmp-logo-text {
      gap: 0.75rem;
    }
    
    .rmp-letters {
      font-size: 2rem;
      letter-spacing: 0.2rem;
    }
    
    .rmp-divider {
      font-size: 2rem;
    }
    
    .rmp-full-name div {
      font-size: 1rem;
      letter-spacing: 0.15rem;
    }
    
    .rmp-tagline {
      font-size: 0.65rem;
      letter-spacing: 0.1rem;
    }
    
    .learn-more-text {
      font-size: 1.5rem;
    }
  }
</style>